<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- No Title Bar-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Custom style -->
    <style name="SeatStyle">
        <item name="android:layout_width">19.125dp</item>
        <item name="android:layout_height">14.625dp</item>

        <item name="android:paddingTop">1.2dp</item>
        <item name="android:paddingStart">1.8dp</item>
        <item name="android:paddingEnd">1.8dp</item>
        <item name="android:paddingBottom">1dp</item>

        <item name="android:orientation">vertical</item>
    </style>
</resources>
